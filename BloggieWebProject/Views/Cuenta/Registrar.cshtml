@model BloggieWebProject.Models.ViewModels.RegistrarViewModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Registrarse
            </h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Nombre de Usuario</label>
                    <input type="text" id="username" class="form-control" asp-for="Nombreusuario" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input type="password" id="password" class="form-control" asp-for="Contrasenia" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Registarse</button>
                </div>
            </form>

            

        </div>
    </div>

</div>